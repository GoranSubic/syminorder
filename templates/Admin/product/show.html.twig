{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ product.enabled }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    {% if product.category and product.category.name %}
                        {{ product.category.name }}</td>
                    {% else %}
                        ..is not set!
                    {% endif %}
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    {% if product.category and product.category.name %}
                    <a href="{{ path('category_show', {'id' : product.category.id}) }}">{{ product.category.name }}</a>
                    {% else %}
                        No cattegory chosen!
                    {% endif %}
                </td>
            </tr>
{#            <tr>#}
{#                <th>FavoriteCount</th>#}
{#                <td>{{ product.favoriteCount }}</td>#}
{#            </tr>#}
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
{#                <td>{{ product.imageName }}</td>#}
                <td>
                    {% if product.picture and product.picture.imageName %}
                        {{ product.picture.imageName }}
                    {% else %}
                        No image!
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if product.picture %}
                        <img src="{{ vich_uploader_asset(product.picture, 'imageFile') }}" alt="{{ product.picture.imageName }}" /></td>
                    {% else %}
                        No image!
                    {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('Admin/product/_delete_form.html.twig') }}
{% endblock %}
