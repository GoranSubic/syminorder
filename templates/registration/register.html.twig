{% extends 'Front/static_pages/layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}

<div id="login-page">
    <div class="login-page container">
        <div class="login-page content">
            <div class="row">
                {% if registrationInfo is defined and registrationInfo is not null and registrationInfo is not empty %}
                    <div class="alert alert-info" role="alert">{{ registrationInfo }}</div>
                {% endif %}
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}

                <div class="login_wrapper">
                    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

                    {{ form_start(registrationForm) }}
                    <div class="input_fields">
                        <div class="col-md-8">
                            {{ form_row(registrationForm.username) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
                            {{ form_row(registrationForm.agreeTerms) }}
                            <div>
                                <p>This site is protected by Terms of <a href="{{ path('app_static_privacy') }}">Privacy Policy</a>. </p>
                            </div>
                            <div class="login_btn_wrapper">
                                <button type="submit" class="btn btn-lg btn-primary login_btn">Register</button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
