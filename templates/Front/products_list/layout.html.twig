{# templates/Front/products_list/layout.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="header container">
        {% block header %}
            {{ include('Front/main-navbar.html.twig') }}
        {% endblock %}
    </div>

    <div class="main container categories">
        {% block greet_info %}
            <div class="categories greet text-center">
                <div class="js-user-name" data-is-authenticated="{{ app.user ? 'true' : 'false' }}"
                     data-user-profile="{{ app.user ? app.user.username|json_encode|e('html_attr') }}" >
                    {#Hello!#}
                </div>

                <a href="#categories" class="btn btn-outline-primary">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-chevron-double-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M1.646 6.646a.5.5 0 0 1 .708 0L8 12.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                        <path fill-rule="evenodd" d="M1.646 2.646a.5.5 0 0 1 .708 0L8 8.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </a>
            </div>
        {% endblock %}

        {% block content %}{% endblock %}
    </div>

    <div class="footer container">
        {% block footer %}
            {{ include('Front/footer.html.twig') }}
        {% endblock %}
    </div>

    <div class="loading-overlay" data-js-loading-overlay>
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

{% endblock %}