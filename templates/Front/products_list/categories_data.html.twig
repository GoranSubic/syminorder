{% if category.children|length > 0 or category.products|length > 0 %}

    <hr />

    <div class="row category" id="category-{{ category.id }}"
        {% if param_to_hide %}
            style="display: none;"
        {% endif %}
    >
        <div class="col-xs-2 col-sm-2 col-md-2">
            {% if category.picture %}
                <img
                    class="img-fluid"
                    style="padding-top: 5px"
                    src="{{ vich_uploader_asset(category.picture, 'imageFile') }}"
                    alt="{{ category.picture.imageName }}"
                />
            {% else %}
                No image!
            {% endif %}
        </div>
        <div class="col-xs-6 col-sm-4 col-md-4">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>
                        {{ category.description }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    {% for product in category.products|filter(product => product.enabled) %}
        <div class="row product category-{{ category.id }}" style="display: none;">
            <div class="col-xs-2 col-sm-2 col-md-2">
                Product!!!
                {% if product.picture %}
                    <img
                            class="img-fluid"
                            style="padding-top: 5px"
                            src="{{ vich_uploader_asset(product.picture, 'imageFile') }}"
                            alt="{{ product.picture.imageName }}"
                    />
                {% else %}
                    No image!
                {% endif %}
            </div>
            <div class="col-xs-6 col-sm-4 col-md-4">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>
                            {{ product.description }}
                        </td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ product.price }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    {% endfor %}

{% endif %}
