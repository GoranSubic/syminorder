{% extends 'Front/static_pages/layout.html.twig' %}

{% set user_is_logged_in = app.user ? true : false %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
    <div class="category-show content" id="product-show">
        <div id="{{ product.id }}" class="flex-container-cat">

            {{ include('Front/show_product/product_image.html.twig') }}

            <div class="category-about">
                <div class="category-name">
                    <h1>{{ product.name }}</h1>
                </div>
                <div class="category-desc">{{ product.description|raw }}</div>
                <div class="learnmore-btn">
                    {% if product.longDescription is defined and product.longDescription != "" %}
                        <button type="button" class="btn btn-sm moreless more">{{ 'category.moreless.more'|trans }}</button>
                        <button type="button" class="btn btn-sm moreless less" style="display: none;">{{ 'category.moreless.less'|trans }}</button>
                    {% endif %}
                </div>

                {% if user_is_logged_in %}
                    <product-buttons
                            v-bind:product="{{ productJson }}"
                    >
                    </product-buttons>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="category-show content">
        <div class="category-long-desc">
            <span id="moreless" class="truncate-desc" style="display: none;">
                {{ product.longDescription|raw }}
            </span>
        </div>
    </div>
{% endblock %}
